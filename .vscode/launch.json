{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/lingo-rs.exe",
            "args": ["C:/source/replay-mobile"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'lingo-rs'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=lingo-rs",
                    "--package=lingo-rs"
                ],
                "filter": {
                    "name": "lingo-rs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'lingo-rs'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=lingo-rs",
                    "--package=lingo-rs"
                ],
                "filter": {
                    "name": "lingo-rs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}